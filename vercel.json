{
  "routes": [
    {
      "src": "/(sitemap\\.xml|robots\\.txt)$",
      "dest": "/$1"
    },
    {
      "src": "/dr-njo",
      "dest": "/drnjo",
      "status": 301
    },
    {
      "src": "/meet-our-team/",
      "dest": "/about",
      "status": 301
    },
    {
      "src": "/speaking-engagements/",
      "dest": "/events", 
      "status": 301
    },
    {
      "src": "/podcasts/",
      "dest": "/blog",
      "status": 301
    },
    {
      "src": "/client-testimonials/",
      "dest": "/testimonials",
      "status": 301
    },
    {
      "src": "/contact-us/",
      "dest": "/contact",
      "status": 301
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
